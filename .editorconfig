# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation for most files
[*.{js,ts,vue,json,css,scss,html,md}]
indent_style = space
indent_size = 4

# 2 space indentation for specific config files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Tab indentation for Makefile
[Makefile]
indent_style = tab
